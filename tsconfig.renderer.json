{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "types": ["react", "react-dom"],
    "typeRoots": ["./node_modules/@types", "./src/renderer"]
  },
  "include": ["src/renderer/**/*"],
  "exclude": ["node_modules", "dist"]
}

